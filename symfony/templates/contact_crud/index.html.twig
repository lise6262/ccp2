{% extends 'baseAdmin.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
<div class="content-wrapper">
<div class="container-fluid">
    <h1>Contact index</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Objet</th>
                <th>Message</th>
                <th>date</th>
            
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.mail }}</td>
                 <td>{{ contact.objet }}</td>
                <td>{{ contact.message }}</td>
                <td>{{ contact.date? contact.date|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('contact_crud_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contact_crud_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun resultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>


    </div>
    </div>
{% endblock %}
