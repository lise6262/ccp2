{% extends 'baseLogin.html.twig' %}
{% block body %}
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
               {% endfor %} 
        
<h2 style="text-align:center;">Formulaire de contact </h2>
<div class="col-sm-12">
    <div class="form-group">
{{ form_start(form) }}
    {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
{{ form_row(form.mail, {'attr': {'class': 'form-control'}}) }} 
</div>
<div class="form-group">
{{ form_row(form.objet, {'attr': {'class': 'form-control'}}) }} 
</div>
<div class="form-group">
    {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.date) }}
</div>

<div class="form-group">
    <input type="submit" value="Envoyez" class="btn btn-primary py-3 px-5">
</div>


{{ form_end(form) }}
</div>
</div>
{% endblock %}